<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Basic theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>

    <style name="CyanTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryCyan</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCyan</item>
        <item name="colorAccent">@color/colorAccentCyan</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="GreyTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryGrey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">@color/colorAccentGrey</item>
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Fab and fav menu styles -->
    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_translationZ</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="MenuFabStyle" parent="FabStyle">
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--Card styles -->
    <style name="CardList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardContentContainer">
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_6dp</item>
        <item name="android:layout_marginRight">@dimen/margin_6dp</item>
        <item name="android:layout_marginBottom">@dimen/cv_margin_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardHeader">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="About" />

    <style name="About.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:paddingBottom">@dimen/clickable_item_padding</item>
        <item name="android:paddingTop">@dimen/clickable_item_padding</item>
    </style>

    <style name="About.Item.Clickable">
        <item name="android:background">@drawable/label_bg</item>
    </style>

</resources>
